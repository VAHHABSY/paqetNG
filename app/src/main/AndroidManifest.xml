<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_SPECIAL_USE" />

    <!-- Shizuku permissions -->
    <uses-permission android:name="moe.shizuku.manager.permission.API_V23" />

    <application
        android:name=".PaqetNGApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PaqetNG">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.PaqetNG">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.PacketDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.PaqetNG"
            android:parentActivityName=".MainActivity" />
        <service
            android:name=".vpn.PaqetNGVpnService"
            android:permission="android.permission.BIND_VPN_SERVICE"
            android:exported="true"
            android:foregroundServiceType="specialUse">
            <intent-filter>
                <action android:name="android.net.VpnService" />
            </intent-filter>
            <property
                android:name="android.app.PROPERTY_SPECIAL_USE_FULFILLMENT_CAPABILITY"
                android:value="vpn" />
            <meta-data
                android:name="android.app.FOREGROUND_SERVICE_TYPE_SPECIAL_USE"
                android:value="This service provides VPN functionality by creating a TUN interface and routing device traffic through a SOCKS5 proxy. The foreground service is required to maintain the VPN connection and display connection status to the user." />
        </service>
        <service
            android:name=".service.PaqetNGTileService"
            android:exported="true"
            android:foregroundServiceType="specialUse"
            android:icon="@drawable/ic_tile_p"
            android:label="@string/app_tile_name"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
            <property
                android:name="android.app.PROPERTY_SPECIAL_USE_FGS_SUBTYPE"
                android:value="tile" />
            <meta-data
                android:name="android.app.FOREGROUND_SERVICE_TYPE_SPECIAL_USE"
                android:value="This service provides a Quick Settings tile that allows users to quickly toggle VPN connection on/off from the notification panel. The foreground service type is required for Quick Settings tile functionality." />
        </service>

        <!-- Shizuku provider -->
        <provider
            android:name="rikka.shizuku.ShizukuProvider"
            android:authorities="${applicationId}.shizuku"
            android:exported="true"
            android:multiprocess="false"
            android:permission="moe.shizuku.manager.permission.API_V23" />
    </application>

</manifest>